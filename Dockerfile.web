# Stage 1: Builder
FROM node:20-alpine AS builder

WORKDIR /app

# ðŸ‘‡ Build-time env var for Next.js
ARG NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL

# Copy root package files and turbo config
COPY package.json package-lock.json turbo.json ./

# Copy shared packages
COPY packages ./packages

# Copy Web app source
COPY apps/web-client ./apps/web-client

# Install dependencies
RUN npm install

# Build ONLY the web-client
RUN npx turbo run build --filter=web-client...

# Stage 2: Production image
FROM node:20-alpine AS prod

WORKDIR /app
ENV NODE_ENV=production

COPY --from=builder /app/apps/web-client/.next ./.next
COPY --from=builder /app/apps/web-client/public ./public
COPY --from=builder /app/apps/web-client/package.json ./package.json
COPY --from=builder /app/node_modules ./node_modules

EXPOSE 3000
CMD ["npm", "run", "start"]
